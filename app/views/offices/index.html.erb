<% provide(:title, '拠点情報一覧') %>

<h1>拠点情報一覧</h1>

  <table class="table table-bordered table-condensed usertable">
      <thead>
        <tr>
          <td></td>
          <td></td>
          <td>拠点番号</td>
          <td>拠点名</td>
          <td>拠点情報</td>
        </tr>
      </thead>
      
      <tbody>
        
    <% @offices.each do |office| %>
        <tr>
        <td><%= link_to "編集", edit_office_path(office), class: "btn btn-success" %></td>
        <% if current_user.admin? %>
        <td><%= link_to "削除", office_path(office), method: :delete,
                  data: { confirm: "削除してよろしいですか？" },
                  class: "btn btn-danger" %>
            </td>
        <% end %>          
        <td><%= office.office_number %></td>
        <td><%= office.office_name %></td>
        <td><%= office.office_modality %></td>
        </tr>
      </tbody>
      
    <% end %>
  </table>
     
      <%= link_to "拠点情報の追加", new_office_path, class: "btn btn-success" %>
      
          
    
   
   
 
          